{{> menu id="dashboard"}}
<div class="container">
    {{#each stations}}
        <div class="border p-2 pb-5 my-2">
            <div class="row">
                <div class="col">
                    <div class="card text-white bg-dark mb-1 h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">
                                Lat: {{this.lat}}<br>
                                Long: {{this.long}}

                            </p>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-secondary" href="/station/{{this.id}}" role="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder2-open" viewBox="0 0 16 16">
                                <path d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v.64c.57.265.94.876.856 1.546l-.64 5.124A2.5 2.5 0 0 1 12.733 15H3.266a2.5 2.5 0 0 1-2.481-2.19l-.64-5.124A1.5 1.5 0 0 1 1 6.14V3.5zM2 6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3H2.5a.5.5 0 0 0-.5.5V6zm-.367 1a.5.5 0 0 0-.496.562l.64 5.124A1.5 1.5 0 0 0 3.266 14h9.468a1.5 1.5 0 0 0 1.489-1.314l.64-5.124A.5.5 0 0 0 14.367 7H1.633z"/>
                            </svg>
                        </a>
                        <a class="btn btn-secondary" href="/dashboard/deletestation/{{this.id}}" role="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                            </svg>
                        </a>
                    </div>

                </div>
                <div class ="col">
                    <div class="card text-white bg-dark mb-3 h-100">
                        <div class="card-body">
                            <h5 class="card-title ">Wetter</h5>
                            <p class="card-text">
                                {{this.weathertext}}
                                Icon: <i class="bi bi-clouds" style="color:white"></i>
                            </p>
                        </div>
                    </div>
                </div>
                <div class ="col">
                    <div class="card text-white bg-dark mb-3 h-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="lightblue" class="bi bi-thermometer-half    position-absolute top-0 end-0 m-3" viewBox="0 0 16 16">
                            <path d="M9.5 12.5a1.5 1.5 0 1 1-2-1.415V6.5a.5.5 0 0 1 1 0v4.585a1.5 1.5 0 0 1 1 1.415z"/>
                            <path d="M5.5 2.5a2.5 2.5 0 0 1 5 0v7.55a3.5 3.5 0 1 1-5 0V2.5zM8 1a1.5 1.5 0 0 0-1.5 1.5v7.987l-.167.15a2.5 2.5 0 1 0 3.333 0l-.166-.15V2.5A1.5 1.5 0 0 0 8 1z"/>
                        </svg>
                        <div class="card-body">
                            <h5 class="card-title">Temperatur</h5>
                            <p class="card-text"> {{this.temp}}Â°
                            <br>
                                Min: {{this.min_temp}}
                            <br>
                                Max: {{this.max_temp}}
                            </p>
                        </div>
                    </div>
                </div>
                <div class ="col">
                    <div class="card text-white bg-dark mb-3 h-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="orange" class="bi bi-wind position-absolute top-0 end-0 m-3" viewBox="0 0 16 16">
                            <path d="M12.5 2A2.5 2.5 0 0 0 10 4.5a.5.5 0 0 1-1 0A3.5 3.5 0 1 1 12.5 8H.5a.5.5 0 0 1 0-1h12a2.5 2.5 0 0 0 0-5zm-7 1a1 1 0 0 0-1 1 .5.5 0 0 1-1 0 2 2 0 1 1 2 2h-5a.5.5 0 0 1 0-1h5a1 1 0 0 0 0-2zM0 9.5A.5.5 0 0 1 .5 9h10.042a3 3 0 1 1-3 3 .5.5 0 0 1 1 0 2 2 0 1 0 2-2H.5a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                        <div class="card-body">
                            <h5 class="card-title">Wind</h5>
                            <p class="card-text"> {{this.windspeed}} bft<br>
                            {{this.winddirection}} <br>
                                Min: {{this.min_windspeed}}<br>
                            Max: {{this.max_windspeed}} <br></p>
                        </div>
                    </div>
                </div>

                <div class ="col">
                    <div class="card text-white bg-dark mb-3 h-100">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="yellow" class="bi bi-speedometer position-absolute top-0 end-0 m-3" viewBox="0 0 16 16">
                            <path d="M8 2a.5.5 0 0 1 .5.5V4a.5.5 0 0 1-1 0V2.5A.5.5 0 0 1 8 2zM3.732 3.732a.5.5 0 0 1 .707 0l.915.914a.5.5 0 1 1-.708.708l-.914-.915a.5.5 0 0 1 0-.707zM2 8a.5.5 0 0 1 .5-.5h1.586a.5.5 0 0 1 0 1H2.5A.5.5 0 0 1 2 8zm9.5 0a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H12a.5.5 0 0 1-.5-.5zm.754-4.246a.389.389 0 0 0-.527-.02L7.547 7.31A.91.91 0 1 0 8.85 8.569l3.434-4.297a.389.389 0 0 0-.029-.518z"/>
                            <path fill-rule="evenodd" d="M6.664 15.889A8 8 0 1 1 9.336.11a8 8 0 0 1-2.672 15.78zm-4.665-4.283A11.945 11.945 0 0 1 8 10c2.186 0 4.236.585 6.001 1.606a7 7 0 1 0-12.002 0z"/>
                        </svg>
                        <div class="card-body">
                            <h5 class="card-title">Luftdruck</h5>

                            <p class="card-text"> {{this.pressure}} hpa
                                <br>
                            Min: {{this.min_pressure}} <br>
                                Max: {{this.max_pressure}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    {{>addstation}}
</div>

{{> menu id="station"}}
<div class="container">
    {{#unless currRecording}}
        <h1> {{station.name}}</h1>
    {{/unless}}
    {{#if currRecording}}
        <div class="row">
            <div class="col-sm">
                <div class="card text-white bg-dark mb-3 h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{currRecording.name}}</h5>
                        <p class="card-text"> Lat: {{station.lat}} <br>
                            Long: {{station.long}}
                        </p>
                    </div>
                </div>
            </div>
            <div class ="col-sm">
                <div class="card text-white bg-dark mb-3 h-100">
                    <i class="bi {{weathericon}} position-absolute top-0 end-0 m-3" style="font-size: 2rem; color:white"></i>
                    <div class="card-body">
                        <h5 class="card-title">Wetter</h5>
                            <p class="card-text"> {{weathertext}}</p>
                    </div>
                </div>
            </div>
            <div class ="col-sm">
                <div class="card text-white bg-dark mb-3 h-100">
                    <i class="bi {{tempicon}} position-absolute top-0 end-0 m-3" style="font-size: 2rem; color:lightblue"></i>
                    <i class="bi {{currRecording.temptrend}} position-absolute top-0 end-0 mt-5 p-2" style="font-size: 2rem; color:lightblue"></i>
                    <div class="card-body">
                        <h5 class="card-title">Temperatur</h5>
                        <p class="card-text"> {{currRecording.temp}} °C <br>
                            Min: {{currRecording.min_temp}} °C <br>
                            Max: {{currRecording.max_temp}} °C <br>
                        </p>
                    </div>
                </div>
            </div>
            <div class ="col-sm">
                <div class="card text-white bg-dark mb-3 h-100">
                    <i class="bi bi-wind position-absolute top-0 end-0 m-3" style="font-size: 2rem; color:orange"></i>
                    <i class="bi {{currRecording.windspeedtrend}} position-absolute top-0 end-0 mt-5 p-2" style="font-size: 2rem; color:orange"></i>
                    <div class="card-body">
                        <h5 class="card-title">Wind</h5>
                        <p class="card-text">
                            {{currRecording.windspeed}} bft <br>
                            {{winddirection}} <br>
                            Min: {{currRecording.min_windspeed}} bft<br>
                            Max: {{currRecording.max_windspeed}} bft
                        </p>
                    </div>
                </div>
            </div>
            <div class ="col-sm">
                <div class="card text-white bg-dark mb-3 h-100">
                    <i class="bi bi-speedometer position-absolute top-0 end-0 m-3" style="font-size: 2rem; color:yellow"></i>
                    <i class="bi {{currRecording.pressuretrend}} position-absolute top-0 end-0 mt-5 p-2" style="font-size: 2rem; color:yellow"></i>
                    <div class="card-body">
                        <h5 class="card-title">Luftdruck</h5>
                        <p class="card-text"> {{currRecording.pressure}} hPa <br>
                            Min: {{currRecording.min_pressure}} hPa<br>
                            Max: {{currRecording.max_pressure}} hPa
                        </p>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    <table class="table">
        <thead>
        <tr>
            <th>Timestamp</th>
            <th>Wetter</th>
            <th>Temperatur</th>
            <th>Windgeschwindigkeit</th>
            <th>Luftdruck</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                {{> listrecordings}}
            </tr>
        </tbody>
    </table>
    <div class="row">
        {{> addrecording}}
        <div class="col-sm">
            {{> addautorecording}}
        </div>
    </div>
</div>